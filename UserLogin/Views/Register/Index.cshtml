<div class="mt-4">
    <form method="post" action="/register">
        <table>
            <tr>
                <td>
                    <label>Name</label>
                </td>
                <td>
                    <input type="text" required name="Name" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Email</label>
                </td>
                <td>
                    <input type="email" required name="EmailId" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Username</label>
                </td>
                <td>
                    <input type="text" required name="UserName" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Password</label>
                </td>
                <td>
                    <input type="password" required name="Password" />
                </td>
            </tr>
            <tr>
                <td>
                    <label>Confirm Password</label>
                </td>
                <td>
                    <input type="password" required name="ConfirmPassword" />
                </td>
            </tr>
            <tr>
                <td>
                    <button type="submit" class="bg-primary">Create account</button>
                </td>
                <td>
                    <button type="button" class="bg-secondary" onclick="window.location.href='/';">Cancel</button>
                </td>
            </tr>
        </table>
    </form>
</div>
